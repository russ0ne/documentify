			<groupId>org.stripesstuff.stripersist</groupId>
			<artifactId>stripersist</artifactId>
			<version>1.0.3</version>
			<scope>system</scope>
			<systemPath>${basedir}/repo/stripersist-1.0.3.jar</systemPath>
